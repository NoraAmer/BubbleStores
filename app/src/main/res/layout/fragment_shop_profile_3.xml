<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/Shop_Profile_Description_Relative"
                android:layout_alignParentTop="true"
                android:background="@color/colorPrimary">

            </RelativeLayout>

            <ImageView
                android:id="@+id/Shop_name_Im"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/Shop_Profile_Start_Margin"
                android:layout_marginStart="@dimen/Shop_Profile_Start_Margin"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_action_maps_store_mall_directory_white"


                />

            <TextView
                android:id="@+id/shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/Shop_name_Im"
                android:layout_toRightOf="@+id/Shop_name_Im"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white"
                android:textSize="20sp"

                />

            <ImageView
                android:id="@+id/shop_image"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_below="@+id/shop_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/Shop_Profile_margin_Top"
                android:src="@drawable/giftintro"


                />

                <TextView
                    android:layout_below="@+id/shop_image"
                    android:id="@+id/Shop_Profile_Short_Desc_tv"
                    android:layout_width="wrap_content"
                    android:maxWidth="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:maxLines="2"
                    android:text="@string/random_1"
                    android:gravity="center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"
                    >

                </TextView>




            <RelativeLayout
                android:id="@+id/Shop_Profile_Description_Relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Shop_Profile_Short_Desc_tv"
                android:layout_marginEnd="@dimen/Shop_Profile_Start_Margin"
                android:layout_marginLeft="@dimen/Shop_Profile_Start_Margin"
                android:layout_marginRight="@dimen/Shop_Profile_Start_Margin"
                android:layout_marginStart="@dimen/Shop_Profile_Start_Margin"
                android:layout_marginTop="10dp"

                >

                <ImageView
                    android:id="@+id/Shop_Profile_Description_Im"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_action_action_description" />

                <TextView
                    android:id="@+id/shop_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginEnd="@dimen/Shop_Profile_Start_Margin"
                    android:layout_marginLeft="@dimen/Shop_Profile_Start_Margin"
                    android:layout_marginRight="@dimen/Shop_Profile_Start_Margin"
                    android:layout_marginStart="@dimen/Shop_Profile_Start_Margin"
                    android:layout_marginTop="20dp"
                    android:layout_toEndOf="@+id/Shop_Profile_Description_Im"
                    android:layout_toRightOf="@+id/Shop_Profile_Description_Im"
                    android:gravity="center"
                    android:maxLines="4"
                    android:padding="5dp"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_action_content_create"
                    android:visibility="gone"


                    />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:layout_below="@+id/Shop_Profile_Description_Relative"
                android:background="@color/divider_color" />

            <RelativeLayout
                android:id="@+id/Shop_Profile_Mobile_Relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Shop_Profile_Description_Relative"
                android:layout_marginEnd="@dimen/Shop_Profile_Start_Margin"
                android:layout_marginLeft="@dimen/Shop_Profile_Start_Margin"
                android:layout_marginRight="@dimen/Shop_Profile_Start_Margin"
                android:layout_marginStart="@dimen/Shop_Profile_Start_Margin"
                android:layout_marginTop="@dimen/Shop_Profile_margin_Top"

                >


                <ImageView
                    android:id="@+id/Shop_Profile_Mobile_Im"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_action_action_settings_phone" />

                <TextView
                    android:id="@+id/shop_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="@dimen/Shop_Profile_Start_Margin"
                    android:layout_marginLeft="@dimen/Shop_Profile_Start_Margin"
                    android:layout_marginRight="@dimen/Shop_Profile_Start_Margin"
                    android:layout_marginStart="@dimen/Shop_Profile_Start_Margin"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/Shop_Profile_Mobile_Im"
                    android:layout_toRightOf="@+id/Shop_Profile_Mobile_Im"
                    android:gravity="start"
                    android:maxLines="4"
                    android:padding="10dp"
                    android:text=""

                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:textSize="18sp" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:layout_below="@+id/Shop_Profile_Mobile_Relative"
                android:layout_marginLeft="80dp"
                android:layout_marginStart="80dp"
                android:background="@color/divider_color"

                />

            <RelativeLayout
                android:id="@+id/Shop_Profile_Email_Relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Shop_Profile_Mobile_Relative"
                android:layout_marginEnd="@dimen/Shop_Profile_Start_Margin"
                android:layout_marginLeft="@dimen/Shop_Profile_Start_Margin"
                android:layout_marginRight="@dimen/Shop_Profile_Start_Margin"
                android:layout_marginStart="@dimen/Shop_Profile_Start_Margin"
                android:layout_marginTop="@dimen/Shop_Profile_margin_Top"

                >


                <ImageView
                    android:id="@+id/Shop_Profile_Email_Im"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_action_content_mail" />

                <TextView
                    android:id="@+id/shop_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="@dimen/Shop_Profile_Start_Margin"
                    android:layout_marginLeft="@dimen/Shop_Profile_Start_Margin"
                    android:layout_marginRight="@dimen/Shop_Profile_Start_Margin"
                    android:layout_marginStart="@dimen/Shop_Profile_Start_Margin"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/Shop_Profile_Email_Im"
                    android:layout_toRightOf="@+id/Shop_Profile_Email_Im"
                    android:gravity="start"
                    android:maxLines="4"
                    android:padding="10dp"
                    android:text=""

                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:textSize="18sp" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:layout_below="@+id/Shop_Profile_Email_Relative"
                android:layout_marginLeft="80dp"
                android:layout_marginStart="80dp"
                android:background="@color/divider_color"

                />

            <RelativeLayout
                android:id="@+id/Shop_Profile_Address_Relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Shop_Profile_Email_Relative"
                android:layout_marginEnd="@dimen/Shop_Profile_Start_Margin"
                android:layout_marginLeft="@dimen/Shop_Profile_Start_Margin"
                android:layout_marginRight="@dimen/Shop_Profile_Start_Margin"
                android:layout_marginStart="@dimen/Shop_Profile_Start_Margin"
                android:layout_marginTop="@dimen/Shop_Profile_margin_Top"

                >


                <ImageView
                    android:id="@+id/Shop_Profile_Address_Im"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_action_social_location_city" />

                <TextView
                    android:id="@+id/shop_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="@dimen/Shop_Profile_Start_Margin"
                    android:layout_marginLeft="@dimen/Shop_Profile_Start_Margin"
                    android:layout_marginRight="@dimen/Shop_Profile_Start_Margin"
                    android:layout_marginStart="@dimen/Shop_Profile_Start_Margin"
                    android:layout_marginTop="5dp"
                    android:layout_toEndOf="@+id/Shop_Profile_Address_Im"
                    android:layout_toRightOf="@+id/Shop_Profile_Address_Im"
                    android:gravity="start"
                    android:maxLines="4"
                    android:padding="10dp"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:textSize="18sp" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:layout_below="@+id/Shop_Profile_Address_Relative"
                android:background="@color/divider_color"

                />


        </RelativeLayout>
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
