<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">


            <ImageView
                android:id="@+id/Item_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/giftintro" />

            <RelativeLayout
                android:id="@+id/Item_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Item_image"
                android:background="@color/colorPrimaryDark">

                <TextView
                    android:id="@+id/Item_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Name"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:id="@+id/By_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Item_Name"
                    android:layout_marginTop="10dp"
                    android:text="By "
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/white"
                    android:layout_marginBottom="10dp"

                    />

                <TextView
                    android:id="@+id/Item_Shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/By_txt"
                    android:layout_toEndOf="@+id/By_txt"
                    android:layout_alignBottom="@+id/By_txt"
                    android:text="Shop Name"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/white"

                    />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/Shop_Profile_Description_Relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Item_Title"
                android:layout_marginEnd="@dimen/Shop_Profile_Start_Margin"
                android:layout_marginLeft="@dimen/Shop_Profile_Start_Margin"
                android:layout_marginRight="@dimen/Shop_Profile_Start_Margin"
                android:layout_marginStart="@dimen/Shop_Profile_Start_Margin"
                android:layout_marginTop="@dimen/Shop_Profile_margin_Top"

                >

                <ImageView
                    android:id="@+id/Shop_Profile_Description_Im"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_action_action_description" />

                <TextView
                    android:id="@+id/Item_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:layout_marginEnd="@dimen/Shop_Profile_Start_Margin"
                    android:layout_marginLeft="@dimen/Shop_Profile_Start_Margin"
                    android:layout_marginRight="@dimen/Shop_Profile_Start_Margin"
                    android:layout_marginStart="@dimen/Shop_Profile_Start_Margin"
                    android:layout_marginTop="40dp"
                    android:layout_toEndOf="@+id/Shop_Profile_Description_Im"
                    android:layout_toRightOf="@+id/Shop_Profile_Description_Im"
                    android:gravity="center"
                    android:maxLines="4"
                    android:padding="5dp"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_action_content_create"
                    android:visibility="gone"


                    />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/Shop_Profile_Description_Relative"
                android:background="@color/primary_text"
                android:layout_marginStart="80dp"
                android:layout_marginLeft="80dp"
                />

            <RelativeLayout
                android:id="@+id/Shop_Profile_Mobile_Relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Shop_Profile_Description_Relative"
                android:layout_marginEnd="@dimen/Shop_Profile_Start_Margin"
                android:layout_marginLeft="@dimen/Shop_Profile_Start_Margin"
                android:layout_marginRight="@dimen/Shop_Profile_Start_Margin"
                android:layout_marginStart="@dimen/Shop_Profile_Start_Margin"
                android:layout_marginTop="@dimen/Shop_Profile_margin_Top"

                >


                <ImageView
                    android:id="@+id/Shop_Profile_Mobile_Im"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_action_editor_attach_money" />

                <TextView
                    android:id="@+id/Item_Price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="@dimen/Shop_Profile_Start_Margin"
                    android:layout_marginLeft="@dimen/Shop_Profile_Start_Margin"
                    android:layout_marginRight="@dimen/Shop_Profile_Start_Margin"
                    android:layout_marginStart="@dimen/Shop_Profile_Start_Margin"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/Shop_Profile_Mobile_Im"
                    android:layout_toRightOf="@+id/Shop_Profile_Mobile_Im"
                    android:gravity="start"
                    android:maxLines="4"
                    android:padding="10dp"
                    android:text=""
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black" />


            </RelativeLayout>





        </RelativeLayout>
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
